% collect and plot
close all;
FILE = {'./data/exp07_7tap-mmse', './data/exp07_fde'};
fg = 1;



figure(fg); fg = fg + 1;
for i = 1:size(FILE,2)
    dat = dlmread(FILE{i});
    for j = 2:size(dat, 1)
        ln(j-1) = line(dat(1,:), dat(j,:),'Marker','o','LineWidth',2,'MarkerFaceColor','none','MarkerSize',8,'Color',[j/size(dat, 1) 0 0]);
    end
end
set(gca, 'yScale', 'log', 'yMinorTick','on');
L = legend('Near-end user', 'Far-end user');
set(L,'FontSize',14, 'Location', 'SouthEast');
xlabel('Power allocation factor (\alpha)','FontSize',14,'Color','k');
ylabel('Bit error rate','FontSize',14,'Color','k');
set(gca,'fontsize',14);
grid on;
box on;
saveas(gcf,'fig1','epsc');
